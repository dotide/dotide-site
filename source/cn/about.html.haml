- content_for :javascripts do
  %script{type: "text/javascript", src: "https://maps.googleapis.com/maps/api/js?key=AIzaSyD1Mp7cWzjLYtiH9BzZhnRZtlL5RRO4V0A&sensor=true"}
  :javascript
    function initialize() {
      latlng = new google.maps.LatLng(32.0765, 118.6676 );
      var mapOptions = {
        center: latlng,
        zoom: 13
      };
      var map = new google.maps.Map(document.getElementById("map"),
          mapOptions);
      var marker = new google.maps.Marker({
        position: latlng,
        title:"南京工业大学科技产业园"
      });
      marker.setMap(map);
    }
    google.maps.event.addDomListener(window, 'load', initialize);
